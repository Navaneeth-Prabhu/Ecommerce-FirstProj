<section class="h-100 gradient-custom">
<div class="container-fluid py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #a8729a;">Order Detials</p>
              <p class="small text-muted mb-0">Order ID : {{order._id}}</p>
            </div>
            {{#each products}}
            <div class="card shadow-0 border mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                    <img src="/product-images/{{this.product._id}}1.jpg" alt="..." width="80" />
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0"><strong class="h7">{{this.product.product_title}}</strong></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{this.product.category}}</p>
                  </div>
                  
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Qty:{{this.quantity}}</p>
                  </div>
                  {{#if this.product.offerPrice}}
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small stroke"><del>${{this.product.price}}</del></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">₹{{this.product.offerPrice}}</p>
                  </div>
                  {{else}}
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">₹{{this.product.price}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">--</p>
                  </div>
                  {{/if}}
                </div>
                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    {{#if ../order.placed}}
                    <p>Placed</p>
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 5%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>


                    {{else if ../order.pending}}
                    <p>Pending</p>
                    {{!-- <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 55%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div> --}}
                    {{else if ../order.shipped}}
                    <p>Shipped</p>
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 55%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    {{else if ../order.delivered}}
                    <p>Delivered</p>
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 100%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    {{else if ../order.return}}
                    <p>Cancelled</p>
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 100%; border-radius: 16px; background-color: #e14419;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    {{/if}}

                    <div class="d-flex justify-content-around mb-1">
                      {{!-- <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p> --}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}


            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Order Details</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Total :</span>₹ {{order.totalAmount}}</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">Order Date : {{order.delivery_details.date}}</p>
              {{#if order.offerPrice}}
              <p class="text-muted mb-0"><span class="fw-bold me-4">Offer Price: ₹ {{order.offerPrice}}</span> </p>
              {{else}}
              <p class="text-muted mb-0"><span class="fw-bold me-4"></span> </p>
              {{/if}}
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">Order Address : {{order.delivery_details.address}}</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4"></span></p>
            </div>

            <div class="d-flex justify-content-between mb-5" pt-2>
              <p class="text-muted mb-0">Order Payment : {{order.paymentMethod}}</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
            </div>
          </div>
          <div class="card-footer border-0 px-4 py-5"
            style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
              :
              {{#if order.offerPrice}}
              <span class="h2 mb-0 ms-2">₹ {{order.offerPrice}}</span>
            </h5>
            {{else}}
            <span class="h2 mb-0 ms-2">₹ {{order.totalAmount}}</span></h5>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    {{#if order.delivered}}
    {{!-- <button onclick="downloadInvoice()">Download Invoice</button> --}}
    <a class="btn btn-dark" href="/invoice/{{order._id}}" <button>Download Invoice</button><a>

        {{/if}}
  </div>
</section>



<script>