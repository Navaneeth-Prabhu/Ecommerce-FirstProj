<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Edit User Data</h2>
                <form action="/admin/edit-user/?id={{user._id}}" method="post">
                    <div class="form-group">
                        <label for="Password">Name</label>
                        <input type="text" name="Name" id="" class="form-control" value="{{user.Name}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="Password">Phone</label>
                        <input type="number" name="number" id="" class="form-control" value="{{user.Phone}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="">Email Address</label>
                        <input type="email" name="Email" id="" class="form-control" value="{{user.Email}}" readonly>
                    </div>

                    <div class="form-group">
                        <label for="Password">Status</label>
                        <input type="text" name="blocked" id="" class="form-control" placeholder="{{user.blocked}}" required>
                    </div>
                    <center>
                            <button type="submit" class="btn btn-primary mx-5">Save Changes</button>
                            <button class="btn btn-primary mx-5"><a style="color: white;text-decoration:none" href="/admin/view-users">Cancel</a></button>
                    </center>
                    
                </form>
        </div>
    </div>
</div>